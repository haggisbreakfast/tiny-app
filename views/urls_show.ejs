<!-- update operation - update existing shortened urls  -->
<form method="POST" action="/urls/<%=shortURL%>/update">
  <!-- input for update button -->
  <input type="text" value="<%= longURL %>" name="newURL" />
  <button type="submit" class="btn btn-primary">Update</button>
</form>

<body>
  <ul>
    <li> Long URL:
      <%=longURL%>
    </li>
    <li> Short URL:
      <%=shortURL%>
    </li>

  </ul>
</body>

